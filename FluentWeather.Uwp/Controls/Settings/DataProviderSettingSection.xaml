<Page
    x:Class="FluentWeather.Uwp.Controls.Settings.DataProviderSettingSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:FluentWeather.Uwp.Shared"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentWeather.Uwp.Controls.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <controls:SettingsExpander Header="数据" IsExpanded="True">

            <controls:SettingsExpander.Items>
                <controls:SettingsCard
                    Padding="12"
                    Description="设置数据源(需要重启)"
                    Header="数据源">
                    <ComboBox
                        x:Name="DataProviderComboBox"
                        PlaceholderText="选择数据源"
                        SelectionChanged="DataProviderComboBox_SelectionChanged">
                        <x:String>和风天气</x:String>
                        <x:String>Open-Meteo</x:String>
                    </ComboBox>
                </controls:SettingsCard>
                <controls:SettingsExpander
                    Visibility="Collapsed"
                    Margin="-1"
                    CornerRadius="0"
                    Header="高级"
                    ItemsSource="{x:Bind app:Common.Settings.DataProviderConfig, Mode=OneWay}">

                    <controls:SettingsExpander.ItemTemplate>
                        <DataTemplate>
                            <controls:SettingsCard Padding="12" Header="{Binding Key}">
                                <TextBox Text="{Binding Value, Mode=TwoWay}" />
                            </controls:SettingsCard>
                        </DataTemplate>
                    </controls:SettingsExpander.ItemTemplate>

                </controls:SettingsExpander>
            </controls:SettingsExpander.Items>

        </controls:SettingsExpander>

    </Grid>
</Page>
