<UserControl
    x:Class="FluentWeather.Uwp.Controls.CityItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentWeather.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="70"
    d:DesignWidth="400" d:RequestedTheme="Dark">
    <Grid  Margin="4,12,12,12">
        <StackPanel>
            <TextBlock Text="{x:Bind Location.Name}" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <TextBlock Text="阴 25° / 35°" Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" Visibility="Collapsed"/>
        </StackPanel>
        <TextBlock Text="30°" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource SubtitleTextBlockStyle}"  Canvas.ZIndex="2"  Visibility="Collapsed"/>
        <Image Source="ms-appx:///Assets/Weather/Day/Cloudy.png" HorizontalAlignment="Right" VerticalAlignment="Center" Height="45" Opacity="0.4"  Visibility="Collapsed"/>
    </Grid>
</UserControl>
