<UserControl
    x:Class="FluentWeather.Uwp.Controls.WeatherHourlyForecastItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentWeather.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interfaces="using:FluentWeather.Abstraction.Interfaces.Weather"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel Spacing="4" x:DefaultBindMode="OneWay">
            <TextBlock   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center">
                <Run Text="{Binding WeatherInfo.Time.Hour}" /><Run Text=":00" />
            </TextBlock>
            <Image Source="{x:Bind WeatherInfo.WeatherType,Converter={StaticResource WeatherTypeToIconConverter}}"  Height="32" Stretch="Uniform" />
            <TextBlock d:Text="晴" Text="{x:Bind WeatherInfo.Description}" FontSize="17" HorizontalAlignment="Center"/>
            <StackPanel>
                <TextBlock d:Text="晴"  FontSize="17" HorizontalAlignment="Center">
                    <Run Text="{Binding WeatherInfo.Temperature}"/><Run Text="°"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
